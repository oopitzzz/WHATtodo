{
  "openapi": "3.0.3",
  "info": {
    "title": "WHATtodo API (한글 문서)",
    "version": "1.1.0",
    "description": "WHATtodo MVP REST API 문서입니다. Bearer JWT 토큰으로 인증합니다.",
    "x-generated-at": "2025-11-27T00:00:00Z"
  },
  "servers": [
    {
      "url": "https://api.whattodo.example.com",
      "description": "운영 서버"
    },
    {
      "url": "http://localhost:3000",
      "description": "로컬 개발 서버"
    }
  ],
  "tags": [
    {
      "name": "인증",
      "description": "회원 가입, 로그인, 로그아웃, 토큰 갱신"
    },
    {
      "name": "할일",
      "description": "할일 목록 조회, 생성, 수정, 삭제, 완료 처리"
    },
    {
      "name": "휴지통",
      "description": "삭제된 할일 관리 (휴지통 조회, 영구 삭제)"
    },
    {
      "name": "사용자",
      "description": "사용자 프로필 조회 및 수정"
    },
    {
      "name": "캘린더",
      "description": "공휴일 정보 조회"
    }
  ],
  "paths": {
    "/api/auth/signup": {
      "post": {
        "tags": ["인증"],
        "summary": "회원 가입",
        "description": "새로운 계정을 등록합니다.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "user@example.com",
                    "description": "이메일 주소"
                  },
                  "password": {
                    "type": "string",
                    "example": "password123",
                    "description": "비밀번호 (8자 이상)"
                  },
                  "nickname": {
                    "type": "string",
                    "example": "홍길동",
                    "description": "닉네임"
                  }
                },
                "required": ["email", "password", "nickname"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "회원 가입 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "type": "object",
                      "properties": {
                        "userId": { "type": "string" },
                        "email": { "type": "string" },
                        "nickname": { "type": "string" }
                      }
                    },
                    "accessToken": { "type": "string" },
                    "refreshToken": { "type": "string" }
                  }
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청 (필수 정보 누락, 비밀번호 8자 미만)"
          },
          "409": {
            "description": "이미 가입된 이메일"
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": ["인증"],
        "summary": "로그인",
        "description": "이메일과 비밀번호로 로그인합니다.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "example": "user@example.com" },
                  "password": { "type": "string", "example": "password123" }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "로그인 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": { "type": "object" },
                    "accessToken": { "type": "string" },
                    "refreshToken": { "type": "string" }
                  }
                }
              }
            }
          },
          "401": {
            "description": "잘못된 이메일 또는 비밀번호"
          }
        }
      }
    },
    "/api/auth/logout": {
      "post": {
        "tags": ["인증"],
        "summary": "로그아웃",
        "description": "현재 세션을 종료합니다.",
        "responses": {
          "200": {
            "description": "로그아웃 성공"
          }
        }
      }
    },
    "/api/auth/refresh": {
      "post": {
        "tags": ["인증"],
        "summary": "토큰 갱신",
        "description": "Refresh Token으로 새로운 Access Token을 발급받습니다.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "refreshToken": { "type": "string" }
                },
                "required": ["refreshToken"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "토큰 갱신 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "accessToken": { "type": "string" }
                  }
                }
              }
            }
          },
          "401": {
            "description": "유효하지 않거나 만료된 토큰"
          }
        }
      }
    },
    "/api/todos": {
      "get": {
        "tags": ["할일"],
        "summary": "할일 목록 조회",
        "description": "내 할일 목록을 조회합니다 (필터링, 정렬 지원)",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "description": "상태 필터 (ACTIVE, COMPLETED, DELETED)",
            "schema": { "type": "string" }
          },
          {
            "name": "priority",
            "in": "query",
            "description": "우선순위 필터 (HIGH, NORMAL, LOW)",
            "schema": { "type": "string" }
          },
          {
            "name": "sortBy",
            "in": "query",
            "description": "정렬 기준 (due_date, priority)",
            "schema": { "type": "string" }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "최대 조회 수 (기본값: 20)",
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "할일 목록 조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "todo_id": { "type": "string" },
                          "title": { "type": "string" },
                          "status": { "type": "string" },
                          "priority": { "type": "string" },
                          "due_date": { "type": "string", "format": "date" }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "인증 필요 (토큰 없음 또는 만료됨)"
          }
        }
      },
      "post": {
        "tags": ["할일"],
        "summary": "할일 생성",
        "description": "새로운 할일을 생성합니다.",
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "example": "프로젝트 완성",
                    "description": "할일 제목 (필수, 100자 이하)"
                  },
                  "description": {
                    "type": "string",
                    "description": "상세 설명 (선택사항)"
                  },
                  "priority": {
                    "type": "string",
                    "example": "HIGH",
                    "description": "우선순위 (HIGH, NORMAL, LOW) - 기본값: NORMAL"
                  },
                  "dueDate": {
                    "type": "string",
                    "format": "date",
                    "example": "2025-12-31",
                    "description": "마감일 (선택사항, 과거날짜 불가)"
                  }
                },
                "required": ["title"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "할일 생성 성공"
          },
          "400": {
            "description": "잘못된 요청 (제목 누락, 제목 100자 초과, 과거 마감일 등)"
          }
        }
      }
    },
    "/api/todos/{id}": {
      "get": {
        "tags": ["할일"],
        "summary": "할일 상세 조회",
        "description": "특정 할일의 상세 정보를 조회합니다.",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "할일 ID",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "할일 조회 성공"
          },
          "404": {
            "description": "할일을 찾을 수 없음"
          }
        }
      },
      "put": {
        "tags": ["할일"],
        "summary": "할일 수정",
        "description": "할일의 정보를 수정합니다.",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string" },
                  "description": { "type": "string" },
                  "priority": { "type": "string" },
                  "dueDate": { "type": "string", "format": "date" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "할일 수정 성공"
          },
          "404": {
            "description": "할일을 찾을 수 없음"
          }
        }
      },
      "delete": {
        "tags": ["할일"],
        "summary": "할일 삭제 (휴지통 이동)",
        "description": "할일을 삭제합니다 (휴지통으로 이동, 30일 후 자동 삭제)",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "할일 삭제 성공"
          },
          "404": {
            "description": "할일을 찾을 수 없음"
          }
        }
      }
    },
    "/api/todos/{id}/complete": {
      "patch": {
        "tags": ["할일"],
        "summary": "할일 완료 처리",
        "description": "할일을 완료 상태로 변경합니다.",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "할일 완료 처리 성공"
          },
          "409": {
            "description": "이미 완료되었거나 삭제된 할일"
          }
        }
      }
    },
    "/api/todos/{id}/restore": {
      "patch": {
        "tags": ["할일"],
        "summary": "할일 복원",
        "description": "삭제된 할일을 복원합니다.",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "string",
                    "example": "ACTIVE",
                    "description": "복원할 상태 (기본값: ACTIVE)"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "할일 복원 성공"
          },
          "404": {
            "description": "할일을 찾을 수 없음"
          }
        }
      }
    },
    "/api/trash": {
      "get": {
        "tags": ["휴지통"],
        "summary": "휴지통 조회",
        "description": "삭제된 할일 목록을 조회합니다 (페이지네이션 지원)",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "페이지 번호 (기본값: 1)",
            "schema": { "type": "integer" }
          },
          {
            "name": "pageSize",
            "in": "query",
            "description": "한 페이지 항목 수 (기본값: 20)",
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "휴지통 조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "items": {
                      "type": "array",
                      "description": "삭제된 할일 목록"
                    },
                    "meta": {
                      "type": "object",
                      "properties": {
                        "page": { "type": "integer" },
                        "pageSize": { "type": "integer" },
                        "total": { "type": "integer" },
                        "totalPages": { "type": "integer" }
                      },
                      "description": "페이지네이션 정보"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/trash/{id}": {
      "delete": {
        "tags": ["휴지통"],
        "summary": "영구 삭제",
        "description": "휴지통의 할일을 완전히 삭제합니다 (복구 불가)",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "할일 ID",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "204": {
            "description": "영구 삭제 성공"
          },
          "404": {
            "description": "휴지통 항목을 찾을 수 없음"
          }
        }
      }
    },
    "/api/users/me": {
      "get": {
        "tags": ["사용자"],
        "summary": "프로필 조회",
        "description": "현재 사용자의 프로필 정보를 조회합니다.",
        "security": [{ "BearerAuth": [] }],
        "responses": {
          "200": {
            "description": "프로필 조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "user_id": { "type": "string" },
                        "email": { "type": "string" },
                        "nickname": { "type": "string" },
                        "profile_image_url": { "type": "string" },
                        "notification_enabled": { "type": "boolean" }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "인증 필요"
          }
        }
      },
      "put": {
        "tags": ["사용자"],
        "summary": "프로필 수정",
        "description": "사용자 프로필을 수정합니다 (닉네임, 프로필 사진, 알림 설정)",
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nickname": {
                    "type": "string",
                    "description": "새로운 닉네임"
                  },
                  "profileImageUrl": {
                    "type": "string",
                    "description": "프로필 이미지 URL"
                  },
                  "notificationEnabled": {
                    "type": "boolean",
                    "description": "알림 활성화 여부"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "프로필 수정 성공"
          },
          "400": {
            "description": "잘못된 요청"
          }
        }
      }
    },
    "/api/calendar/holidays": {
      "get": {
        "tags": ["캘린더"],
        "summary": "공휴일 조회",
        "description": "연도와 월별 공휴일 정보를 조회합니다.",
        "parameters": [
          {
            "name": "year",
            "in": "query",
            "description": "조회 연도 (기본값: 현재 연도)",
            "schema": { "type": "integer", "example": 2025 }
          },
          {
            "name": "month",
            "in": "query",
            "description": "조회 월 (1~12, 생략 시 전체 월)",
            "schema": { "type": "integer", "minimum": 1, "maximum": 12 }
          }
        ],
        "responses": {
          "200": {
            "description": "공휴일 조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "date": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-01-01"
                      },
                      "holiday_name": {
                        "type": "string",
                        "example": "신정"
                      },
                      "description": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "잘못된 월 값 (1~12 범위 초과)"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Access Token을 입력해주세요. (Bearer 스키마)"
      }
    }
  }
}
